{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",    
        "resolveJsonModule": true,  
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",               
        "outDir": "./dist",               
        "strict": true,                   
        "esModuleInterop": true           
    },
    "include": ["src"],                 
    "exclude": ["node_modules"]         
  }